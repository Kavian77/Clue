{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**"
      ],
      "inputs": [
        "packages/**"
      ]
    },
    "test": {
      "dependsOn": [
        "^build"
      ],
      "outputs": []
    },
    "check-types": {
      "inputs": ["packages/**", "tsconfig.base.json", "tsconfig.json"],
      "outputs": []
    },
    "lint": {
      "inputs": ["packages/**", "eslint.config.js"],
      "outputs": []
    }
  }
}
